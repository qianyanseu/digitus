{{!< default}}

<header role='banner' class="site-head_digitus wrapper_digitus fade_digitus">
    {{#if @blog.logo}}
        <a class="logo_digitus" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
    {{/if}}
    <h1 class="blogtitle_digitus">
        <a title="{{@blog.title}}" href='{{@blog.url}}'>
            {{{@blog.title}}}
        </a>
    </h1>
</header>


<main class="wrapper_digitus" role="main">
    
{{#post}}
	
    <article class="article_digitus">
	
		<header class="postheader_digitus">
            <h1 class="posttitle_digitus">{{title}}</h1>
            <span>by</span><h4 class="authorname_digitus"><a href="{{@blog.url}}/author/{{author.slug}}">{{author.name}}</a></h4>
            <hr class="pause" />
			<ul>
				<li><i class="fa fa-calendar"></i><time class="date_digitus" >{{date format='dddd DD MMM YYYY'}}</time></li>
                <li><i class="fa fa-comments"></i><a class="comments_digitus" href="{{url}}#disqus_thread" data-disqus-identifier="{{id}}">Comments</a></li>
                	{{#if tags}}
				<li><i class="fa fa-tag"></i><span class="posttags_digitus">{{tags  separator=", "}}</span></li>
					{{/if}}
			</ul>
		</header>
	
		<div class="postcontent_digitus">
			{{content}}
		</div>
	
		<ol class="share_digitus">
            <li>
                <span>Share:</span>
                <ul class="share-ikons_digitus">
                    <li><a class="fa fa-twitter-square" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidden_digitus">Twitter</span></a></li>
                    <li><a class="fa fa-facebook-square" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidden_digitus">Facebook</span></a></li>
                    <li><a class="fa fa-google-plus-square" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidden_digitus">Google+</span></a></li>
                </ul>
            </li>
            <li class="back_digitus"><a href="{{post}}"><i class="fa fa-level-up"></i><span>Back to top</span></a></li>
		</ol>
	
     {{#if author}}
    
     <footer class="postfooter_digitus">
         
         {{#if tags}} 
            <span class="posttags_typesome"> {{tags separator=""}}</span>
            <hr class="pause" />
         {{/if}}
        
         <address>
				{{#if author.image}}
				<div class="authorimage_digitus" style="background-image: url({{author.image}})"></div>
				{{/if}}
         
                <ul>
				    <li><h4 class="authorname_digitus"><a href="{{@blog.url}}/author/{{author.slug}}">{{author.name}}</a></h4></li>
                    <li><p class="authorbio_digitus">{{author.bio}}</p></li>
				    <li>  
                        {{#if author.location}}
				        <h5>{{author.location}}</h5>
				        {{/if}}
				        {{#if author.website}}
				        <h5><a href="{{author.website}}">{{author.website}}</a></h5>
				        {{/if}}
                    </li>
				</ul>
             </address>
		</footer>
        {{/if}}
	
	</article>
	
	
	<div id="disqus_thread" class="disqusbox_digitus">
        
    <script type="text/javascript">
        
        var disqus_shortname = 'example'; // required: replace example with your Disqus shortname
        var disqus_identifier = '{{post.id}}';
        
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
    
</div>
	
	
{{/post}}
</main>
{{> footer}}